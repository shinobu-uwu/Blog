@model Blog.ViewModels.EditPostViewModel
@{
    ViewData["Title"] = "Create a post";
}
<form asp-action="Edit" asp-controller="Post" method="post">
    <div class="container">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" asp-validation-summary="All"></div>
        }
        <div class="m-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" value="@Model.Title"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="m-3">
            <label class="form-label" for="body">Body</label>
            <textarea class="form-control" type="text" id="body" name="body">@Model.Body</textarea>
        </div>
        <div class="m-3">
            <input class="btn btn-primary" type="submit" value="Edit post"/>
        </div>
    </div>
    <input type="hidden" value="@Model.PostId" asp-for="PostId"/>
</form>